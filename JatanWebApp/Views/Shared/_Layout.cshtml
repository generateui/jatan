<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jatan</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("css", false)
</head>
<body>
<div class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <img class="jatan-logo-image" alt="Settlers of Jatan" src="~/Content/Images/site/jatantext-styled-small.png" />
            </a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li><a href="@Url.Action("Index", "Home")"><span class="glyphicon mr-1 glyphicon-tree-conifer"></span>Create Game</a></li>
                <li><a href="@Url.Action("Index", "Home")"><span class="glyphicon mr-1 glyphicon-globe"></span>Join Game</a></li>
                <li><a href="@Url.Action("Index", "Home")"><span class="glyphicon mr-1 glyphicon-stats"></span>Top Players</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="@Url.Action("Index", "Home")"><span class="glyphicon mr-1 glyphicon-wrench"></span>Settings</a></li>
                <li><a href="@Url.Action("Index", "Home")"><span class="glyphicon mr-1 glyphicon-log-in"></span>Log In</a></li>
                <li><a href="@Url.Action("Index", "Home")"><span class="glyphicon mr-1 glyphicon-log-out"></span>Log Out</a></li>
            </ul>
        </div>
    </div>
</div>
<div>
    <!-- class="container body-content" -->
    @RenderBody()
</div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
